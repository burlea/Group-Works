<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/task_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/task_due_date_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task_status_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/incompleteStatus"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task_minimum_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task_particpants_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sign_up_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/gray"
        android:text="@string/sign_up"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/complete_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/gray"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="@string/complete"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/save_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/gray"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:text="@string/add_resource"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/username_text"
        android:text="@string/description"
        android:layout_alignTop="@+id/description_text"
        android:layout_alignStart="@+id/description_text"
        android:layout_marginTop="-20dp"
        android:textColor="@color/black"
        style="bold"/>

    <EditText
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="350dp"
        android:inputType="text"
        android:textColor="@color/black"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/required_materials"
        android:text="@string/required_materials"
        android:layout_alignTop="@+id/required_materials"
        android:layout_alignStart="@+id/required_materials"
        android:layout_marginTop="-20dp"
        android:textColor="@color/black"
        style="bold"/>

    <EditText
        android:id="@+id/required_materials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="450dp"
        android:inputType="text"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/Notes"
        android:text="@string/notes"
        android:layout_alignTop="@+id/notes"
        android:layout_alignStart="@+id/notes"
        android:layout_marginTop="-20dp"
        android:textColor="@color/black"
        style="bold"/>


    <EditText
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="550dp"
        android:inputType="text"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/participants_title"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="600dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/participants_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="620dp"
        android:textColor="@color/black"/>

</RelativeLayout>